<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Northwind (@ViewBag.LoggedStatus)</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="~/Home/Index">
                            Home
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item active"><a class="nav-link" href="~/Home/Login">Login <span class="sr-only">(current)</span></a></li>
                    <li class="nav-item active"><a class="nav-link" href="~/Home/Logout">Logout <span class="sr-only">(current)</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Home/About">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Home/Map">Map</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Home/Contact">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Products/Index">Products</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Shippers/Index">Shippers</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="~/Home/About">About</a>
                            <a class="dropdown-item" href="~/Home/Contact">Contact</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="~/Home/Map">Map</a>
                        </div>
                    </li>
                </ul>

            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Northwind demo app</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstraplux")
    @RenderSection("scripts", required: false)
</body>
</html>
